{
  "name": "Comment",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "content": {
      "type": "string",
      "required": true
    }
  },
  "relations": {
    "item": {
      "type": "belongsTo",
      "model": "Item",
      "foreignKey": "itemId"
    },
    "from": {
      "type": "belongsTo",
      "model": "HiwuUser",
      "foreignKey": "fromId"
    },
    "to": {
      "type": "belongsTo",
      "model": "HiwuUser",
      "foreignKey": "toId"
    }
  }
}
