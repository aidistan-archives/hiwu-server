{
  "name": "Item",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "date_y": {
      "type": "number"
    },
    "date_m": {
      "type": "number"
    },
    "date_d": {
      "type": "number"
    },
    "city": {
      "type": "string"
    },
    "public": {
      "type": "boolean",
      "default": true
    }
  },
  "validations": [],
  "relations": {
    "hiwuUser": {
      "type": "belongsTo",
      "model": "HiwuUser",
      "foreignKey": "userId"
    },
    "galleries": {
      "type": "hasMany",
      "model": "Gallery",
      "foreignKey": "galleryId",
      "through": "GalleryItem"
    },
    "collections": {
      "type": "hasMany",
      "model": "Collection",
      "foreignKey": "collectionId",
      "through": "CollectionItem"
    },
    "likers": {
      "type": "hasMany",
      "model": "HiwuUser",
      "foreignKey": "likerId",
      "through": "Like"
    },
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "itemId"
    },
    "photos": {
      "type": "hasMany",
      "model": "Photo",
      "foreignKey": "itemId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "publicView"
    }
  ],
  "methods": []
}
