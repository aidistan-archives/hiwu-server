{
  "name": "Item",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "date_y": {
      "type": "number",
      "default": 0
    },
    "date_m": {
      "type": "number",
      "default": 0
    },
    "date_d": {
      "type": "number",
      "default": 0
    },
    "city": {
      "type": "string",
      "default": ""
    },
    "public": {
      "type": "boolean",
      "default": true
    }
  },
  "validations": [],
  "relations": {
    "hiwuUser": {
      "type": "belongsTo",
      "model": "HiwuUser",
      "foreignKey": "userId"
    },
    "gallery": {
      "type": "belongsTo",
      "model": "Gallery",
      "foreignKey": "galleryId"
    },
    "collections": {
      "type": "hasMany",
      "model": "Collection",
      "foreignKey": "itemId",
      "through": "CollectionItem"
    },
    "likers": {
      "type": "hasMany",
      "model": "HiwuUser",
      "foreignKey": "itemId",
      "through": "Like"
    },
    "comments": {
      "type": "hasMany",
      "model": "Comment",
      "foreignKey": "itemId"
    },
    "photos": {
      "type": "hasMany",
      "model": "Photo",
      "foreignKey": "itemId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "__create__comments"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "publicView"
    }
  ],
  "methods": {}
}
