{
  "name": "HiwuUser",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "hidden": [
    "realm",
    "username",
    "email",
    "credentials",
    "challenges",
    "emailVerified",
    "verificationToken",
    "status"
  ],
  "properties": {
    "nickname": {
      "type": "string"
    },
    "avatar": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "notifications": {
      "type": "hasMany",
      "model": "Notification",
      "foreignKey": "userId"
    },
    "galleries": {
      "type": "hasMany",
      "model": "Gallery",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "DENY",
      "property": "deleteById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "updateAvatar"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__create__galleries"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__galleries"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__count__galleries"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "simpleLogin"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "publicView"
    }
  ],
  "methods": []
}
