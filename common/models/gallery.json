{
  "name": "Gallery",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "default": ""
    },
    "public": {
      "type": "boolean",
      "default": true
    }
  },
  "validations": [],
  "relations": {
    "hiwuUser": {
      "type": "belongsTo",
      "model": "HiwuUser",
      "foreignKey": "userId"
    },
    "items": {
      "type": "hasMany",
      "model": "Item",
      "foreignKey": "galleryId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "publicView"
    }
  ],
  "methods": []
}
