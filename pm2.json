{
  "apps": [{
    "name": "hiwu-server",
    "script": "server/server.js",
  }],
  "deploy": {
    "production": {
      "user": "root",
      "host": "palace.server.hiwu.ren",
      "ref": "origin/master",
      "repo": "git@bitbucket.org:hiwu/hiwu-server.git",
      "path": "/var/www/hiwu-server/production",
      "post-deploy": "cnpm install ; pm2 startOrRestart pm2.json --env production",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "staging": {
      "user": "root",
      "host": "palace.server.hiwu.ren",
      "ref": "origin/master",
      "repo": "git@bitbucket.org:hiwu/hiwu-server.git",
      "path": "/var/www/hiwu-server/staging",
      "post-deploy": "cnpm install ; pm2 startOrRestart pm2.json --env staging",
      "env": {
        "NODE_ENV": "staging"
      }
    }
  }
}
