{
  "apps": [{
    "name": "production",
    "script": "server/server.js",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm Z"
  }],
  "deploy": {
    "production": {
      "user": "root",
      "host": "palace.server.hiwu.ren",
      "ref": "origin/master",
      "repo": "git@github.com:hiwu/hiwu-server.git",
      "path": "/var/www/production",
      "post-deploy": "cnpm install ; pm2 startOrRestart pm2.production.json --env production",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
