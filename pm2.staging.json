{
  "apps": [{
    "name": "staging",
    "script": "server/server.js",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm Z"
  }],
  "deploy": {
    "staging": {
      "user": "root",
      "host": "palace.server.hiwu.ren",
      "ref": "origin/develop",
      "repo": "git@github.com:hiwu/hiwu-server.git",
      "path": "/var/www/staging",
      "post-deploy": "cnpm install ; pm2 startOrRestart pm2.staging.json --env staging",
      "env": {
        "NODE_ENV": "staging"
      }
    }
  }
}
